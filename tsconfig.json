{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "alwaysStrict": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src"
    ]
}
