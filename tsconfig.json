{
    "compilerOptions": {
        "target": "ES2017",
        "module": "CommonJS",
        "strict": true,
        "downlevelIteration": true,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src"
    ]
}
